<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:owner) %></th>
      <th><%= model_class.human_attribute_name(:type_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= link_to item.id, item_path(item) %></td>
        <td><%= item.title %></td>
        <td><%= item.description %></td>
        <td><%= item.owner %></td>
        <td><%= item.type_id %></td>
        <td><%=l item.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_item_path(item), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      item_path(item),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>





<div class="col-md-offset-1 col-md-4">
  <h1>Search</h1>
    <%= form_tag('/search', method: "post", class: "form") do %>

      <div class="form-group">
        <label>Title</label>
        <%= text_field_tag(:title, "", class: "form-control") %>
	<label>Return matching or non-matching items</label>
      </div>
      <div class = "form-group">
      <%= collect = Array.new()
          Type.all.each do |type|
	      collect1 = Array.new
              collect1 << type.title << type.id
	      collect << collect1
          end

          select_tag(:type,  options_for_select(collect, class: "form-control"))%>

      </div>

      <div class = "form-group">
         <%= select_tag(:conjunction,  options_for_select([['OR', '3'], ['AND', '2']], class: "form-control"))%>

      </div>



     
 

      <%= submit_tag("Search", class: "btn btn-default") %>
    <% end %>
</div>



